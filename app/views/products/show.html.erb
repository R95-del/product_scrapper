<div class="row mb-4">
  <div class="col">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to 'Products', products_path %></li>
        <li class="breadcrumb-item active">Product Details</li>
      </ol>
    </nav>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <h1 class="card-title"><%= @product.title %></h1>

    <div class="row">
      <div class="col-md-8">
        <div class="mb-4">
          <h5 class="text-muted">Description</h5>
          <p class="lead"><%= @product.description %></p>
        </div>

        <div class="mb-4">
          <h5 class="text-muted">Category</h5>
          <div class="badge bg-secondary text-wrap" style="max-width: 100%;">
            <%= @product.category %>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h3 class="text-center mb-3"><%= @product.formatted_price %></h3>
            <p class="text-muted text-center">
              Last updated: <%= time_ago_in_words(@product.last_scraped_at) %> ago
            </p>
            <div class="d-grid gap-2">
              <%= link_to 'Visit Original', @product.url,
                  class: 'btn btn-primary w-100',
                  target: '_blank' %>
              <%= button_to 'Delete Product',
                  product_path(@product),
                  method: :delete,
                  class: 'btn btn-danger w-100 mt-2',
                  data: { confirm: 'Are you sure you want to delete this product?' } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-4">
  <%= link_to 'Back to Products', products_path, class: 'btn btn-secondary' %>
</div>
