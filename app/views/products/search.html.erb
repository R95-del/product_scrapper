<div class="container mt-4">
  <h1>Search Results</h1>

  <div class="mb-4">
    <%= form_tag search_products_path, method: :get, class: 'form-inline' do %>
      <div class="input-group">
        <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Search products..." %>
        <div class="input-group-append">
          <%= submit_tag "Search", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @products.any? %>
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= product.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= number_to_currency(product.price) %></h6>
              <p class="card-text"><%= truncate(product.description, length: 100) %></p>
              <%= link_to 'View Details', product_path(product), class: 'btn btn-primary btn-sm' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No products found matching '<%= @query %>'</p>
  <% end %>

  <%= link_to 'Back to Products', products_path, class: 'btn btn-secondary' %>
</div>
